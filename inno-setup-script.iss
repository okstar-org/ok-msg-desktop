[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "D:\Work\ok-msg\src\ok-msg-desktop\build\deploy\{#MyAppExeName}"; DestDir: "{app}"; Flags: ignoreversion
